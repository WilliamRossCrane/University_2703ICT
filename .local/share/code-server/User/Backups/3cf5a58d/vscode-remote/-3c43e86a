<?php

namespace App\Models;

use Illuminate\Database\Eloquent\Factories\HasFactory;
use Illuminate\Database\Eloquent\Model;

class Post extends Model
{
    use HasFactory;

    // Define the fields that are fillable, including the 'likes' field
    protected $fillable = ['title', 'author', 'message', 'likes'];

    // Define the relationship to comments
    public function comments()
    {
        return $this->hasMany(Comment::class);
    }

    // Other methods and relationships can be added here as needed
}
